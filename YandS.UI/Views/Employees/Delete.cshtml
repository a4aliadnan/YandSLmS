@model YandS.UI.Models.Employees

@{
    ViewBag.Title = "Y & S Associates - Employee Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Employee Information</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Master</li>
                        <li class="breadcrumb-item">Employee</li>
                        <li class="breadcrumb-item active"><a href="#">Delete Employee</a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="col-md-6 classCenter">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Employee Delete</h3>
                </div>

                <div class="card-body">
                    <p class="text-danger">Are you sure you want to delete this?</p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.EmployeeNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EmployeeNumber)
                        </dd>
                    </dl>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.FullName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FullName)
                        </dd>
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-save"></i> Delete</button> |
                        <a class="btn btn-primary" href="@Url.Action("Index", "Employees")"><i class="fas fa-home"></i> Back to Main</a>
                    </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
