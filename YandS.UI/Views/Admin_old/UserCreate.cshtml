@model YandS.UI.Models.ApplicationUser
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage
            <small>Users</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin</a></li>
            <li class="active">Create User</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Create User</h3>
                <div class="box-tools pull-right">
                    @Html.ActionLink("Go to Users", "Index", "Admin")
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">

                <div class="panel">
                    @using (Html.BeginForm("UserCreate", "Admin", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <legend><strong> Create User</strong></legend>
                            <br />
                            <table style='width: 100%'>
                                <tr>
                                    <td style='width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.UserName, "Username")
                                    </td>
                                    <td class='userTable'>
                                        @Html.TextBoxFor(model => model.UserName, new { style = "width:250px" })
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </td>
                                </tr>

                                <tr>
                                    <td style='width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.Firstname, "Firstname")
                                    </td>
                                    <td class='userTable'>
                                        @Html.TextBoxFor(model => model.Firstname, new { style = "width:250px" })
                                        @Html.ValidationMessageFor(model => model.Firstname)
                                    </td>
                                </tr>

                                <tr>
                                    <td style='width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.Lastname, "Lastname")
                                    </td>
                                    <td class='userTable'>
                                        @Html.TextBoxFor(model => model.Lastname, new { style = "width:250px" })
                                        @Html.ValidationMessageFor(model => model.Lastname)
                                    </td>
                                </tr>

                            </table>
                            <br />
                            <input class="btn btn-default" type="submit" value="Create" />
                        </fieldset>
                    }
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
