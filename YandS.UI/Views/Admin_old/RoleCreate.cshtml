@model YandS.UI.Models.ApplicationRole
@{
    ViewBag.Title = "Create Role";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage
            <small>Roles</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin</a></li>
            <li class="active">Create Roles</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Create Role</h3>
                <div class="box-tools pull-right">
                    @Html.ActionLink("Go to Roles", "RoleIndex", "Admin")
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="box-body">
                    <table style='width: 100%'>
                        <tr>
                            <td style='width: 10%; font-weight: bold' class='userTable'>
                                @Html.LabelFor(model => model.Name)
                            </td>
                            <td style='width: 28%' class='userTable'>
                                @Html.TextBoxFor(model => model.Name, new { style = "width:450px" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </td>
                            <td style='width: 8%; font-weight: bold' class='userTable'>
                                @Html.LabelFor(model => model.IsSysAdmin, "System Role")
                            <td style='width: 20%' class='userTable'>
                                @Html.EditorFor(model => model.IsSysAdmin)
                                @Html.ValidationMessageFor(model => model.IsSysAdmin)
                            </td>
                        </tr>
                        <tr>
                            <td style='width: 10%; font-weight: bold' class='userTable'>
                                @Html.LabelFor(model => model.RoleDescription)
                            </td>
                            <td style='width: 28%' class='userTable'>
                                @Html.TextBoxFor(model => model.RoleDescription, new { style = "width:450px" })
                                @Html.ValidationMessageFor(model => model.RoleDescription)
                            </td>
                        </tr>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input class="btn btn-default" type="submit" value="Create Role" />

                </div>
                <!-- /.box-footer-->
            }
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>