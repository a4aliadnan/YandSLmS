@model YandS.UI.Models.ApplicationRole
@{
    ViewBag.Title = "Role: " + Html.DisplayFor(model => model.RoleDescription);
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage
            <small>Roles</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin</a></li>
            <li class="active">Role Detail</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Title</h3>
                <div class="box-tools pull-right">
                    @Html.ActionLink("Go to Roles", "RoleIndex", "Admin")
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                @{if (Model != null)
                    {
                        <div class="row">
                            <div class="panel">
                                <fieldset>
                                    <legend>
                                        <h3 style="font-weight:bold; font-size:x-large">
                                            Role Details
                                        </h3>
                                    </legend>
                                    <div>
                                        <table style='width: 100%'>
                                            <tr>
                                                <td style='width: 120px;font-weight: bold' class='userTable'>
                                                    @Html.LabelFor(model => model.Name)
                                                </td>
                                                <td class='userTable'>
                                                    @Html.DisplayFor(model => model.Name, new { style = "width:350px" })
                                                    @Html.ValidationMessageFor(model => model.Name)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style='font-weight: bold' class='userTable'>
                                                    @Html.LabelFor(model => model.RoleDescription)
                                                </td>
                                                <td class='userTable'>
                                                    @Html.DisplayFor(model => model.RoleDescription, new { style = "width:90%" })
                                                    @Html.ValidationMessageFor(model => model.RoleDescription)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td style='width: 100px; font-weight: bold' class='userTable'>
                                                    @Html.LabelFor(model => model.IsSysAdmin, "System Role")
                                                </td>
                                                <td class='userTable'>
                                                    @Html.DisplayFor(model => model.IsSysAdmin)
                                                    @Html.ValidationMessageFor(model => model.IsSysAdmin)
                                                </td>
                                            </tr>
                                        </table>
                                        <br />
                                        <input class="btn btn-default" type="button" value="Edit" onclick="location.href='@Url.Action("RoleEdit", "Admin", new { id = Model.Id })'" />
                                </fieldset>
                                <div>
                                    <fieldset>
                                        <legend>
                                            <h3>
                                                Permissions Associated with this Role
                                            </h3>
                                        </legend>

                                        <div id="PermissionsTable">
                                            @Html.Partial("_ListPermissions", Model)
                                        </div>
                                    </fieldset>
                                </div>
                            </div>

                        </div>

                    }
                }
            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
