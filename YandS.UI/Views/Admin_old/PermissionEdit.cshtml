@model YandS.UI.Models.PERMISSION
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Permission
            <small> Details</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-user"></i> Admin</a></li>
            <li><a href="#">Permission</a></li>
            <li><a href="#">Permission Details</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Permission Details</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                <div class="box-body">

                    @Html.ValidationSummary(true)

                    @Html.HiddenFor(model => model.PermissionId)
                    <table style='width: 100%'>
                        <tr>
                            <td style='width: 120px;font-weight: bold'>
                                @Html.LabelFor(model => model.PermissionDescription, "Description")
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.PermissionDescription, new { style = "width:450px" })
                                @Html.ValidationMessageFor(model => model.PermissionDescription)
                            </td>
                        </tr>
                    </table>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input class="btn btn-default" type="submit" value="Update Permission" />
                </div>
            }
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Roles Associated with this Permission</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div id="RolesTable">
                    @Html.Partial("_ListRolesTable4Permission", Model)
                </div>
                <div>
                    @Html.Partial("_AddRole4Permission", Model)
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>