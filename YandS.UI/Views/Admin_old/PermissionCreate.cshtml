@model YandS.UI.Models.PERMISSION
@{
    ViewBag.Title = "Create";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create
            <small> Permission</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">Blank page</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Create Permission</h3>
                <div class="box-tools pull-right">
                    @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.ValidationSummary(true)
                    <div class="editor-label">
                        @Html.LabelFor(model => model.PermissionDescription, "Permission Description")
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.PermissionDescription, new { style = "width:450px" })
                        @Html.ValidationMessageFor(model => model.PermissionDescription)
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input class="btn btn-default" type="submit" value="Create" />
                </div>
            }

            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>

@section pagespecific {
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}
<div class="panel">
    <fieldset>
        <legend>
            <h3 style="font-weight:bold; font-size:x-large">
                Create Permission
            </h3>
        </legend>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="editor-label">
                @Html.LabelFor(model => model.PermissionDescription, "Permission Description")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.PermissionDescription, new { style = "width:450px" })
                @Html.ValidationMessageFor(model => model.PermissionDescription)
            </div>
            <br />
            <input class="btn btn-default" type="submit" value="Create" />
        }
    </fieldset>
</div>
