@model IEnumerable<YandS.UI.Models.ApplicationUser>
<div class="panel" id="divUsers">
    <table id="UserTable" class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    UserName
                </th>
                <th style="width: 20%">
                    Last Name
                </th>
                <th style="width: 30%">
                    First Name
                </th>
                <th>
                    Inactive
                </th>
                <th style="width: 8%" class="text-center">
                    Email
                </th>
                <th style="width: 20%; text-align:center">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.UserName, "UserDetails", new { id = item.Id })
                    </td>
                    <td>
                        @item.Lastname
                    </td>
                    <td>
                        @item.Firstname
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inactive)
                    </td>

                    <td>@item.Email</td>
                    <td class="project-actions text-right">
                        <a class="btn btn-info btn-sm" href="@Url.Action("UserEdit", "Admin", new { id = item.Id })" id=@item.Id>
                            <i class="fas fa-pencil-alt">
                            </i>
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("UserEdit", "Admin", new { id = item.Id })" id=@item.Id>
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  </div>
