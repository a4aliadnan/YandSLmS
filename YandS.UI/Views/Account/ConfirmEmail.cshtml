@{
    ViewBag.Title = "Account Verified";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Management
            <small>Account Verified</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#"> System Administration</a></li>
            <li class="active"><a href="#"> Account Verified</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <table>
                    <tr>
                        <td><img src="~/Content/Images/result.png" /></td>
                        <td class="rbac-formtitle">@ViewBag.Title<p class="rbac-formtitlesub">Your email address has been successfully verified</p></td>
                    </tr>
                </table>
                <hr />
                <p>
                    Thank you for verifying your email.  You can now @Html.ActionLink("log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to the TravelMax Portal.
                </p>


            </div>

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>