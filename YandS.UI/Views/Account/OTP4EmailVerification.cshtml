@model YandS.UI.Models.TOTP4EmailViewModelPost
@{
    ViewBag.Title = "Verify Email";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("OTPEmailVerification", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()    
    @Html.Hidden("UserId", @Model.UserId)
    @Html.Hidden("Provider", @Model.Provider)

    <p>To verify your identity on this computer enter the verification code sent to your e-mail account</p>
    <br />
    <h4>Enter security PIN code</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.SecurityPIN, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SecurityPIN, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Verify My Identity" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}







