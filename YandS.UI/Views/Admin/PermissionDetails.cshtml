@model YandS.UI.Models.PERMISSION
@{
    ViewBag.Title = "Permission Details";
    Layout = "~/Views/Shared/_LayoutRBAC.cshtml";

}

<div class="panel">
    <fieldset>
        <legend>
            <h3 style="font-weight:bold; font-size:x-large">
                Permission Details
            </h3>
        </legend>
        <div>
            <table style='width: 100%'>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.PermissionDescription, "Description")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.PermissionDescription)
                    </td>
                </tr>                
            </table>
            <br />
            <input class="btn btn-default" type="button" value="Edit Permission" onclick="location.href='@Url.Action("PermissionEdit", "Admin", new { id = Model.PermissionId })'" />            
        </div>
        <br />
    </fieldset>    
    <div>
        <fieldset>
            <legend>
                <h3>
                    Roles Associated with this Permission</h3>
            </legend>
            <div id="RolesTable">
                @Html.Partial("_ListRolesTable4Permission", Model)
            </div>
        </fieldset>
    </div>
</div>
<div>
    @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")  
</div>