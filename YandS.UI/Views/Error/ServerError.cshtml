@model YandS.UI.Models.ErrorVM
@{
    ViewBag.Title = "Error - Server Error";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1><i class="subheader-icon-err fal fa-minus-circle red"></i> Error :  @ViewBag.actionName</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">Error</li>
                        <li class="breadcrumb-item active"><a href="#">Server Error</a></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div id="DIV_ERROR" class="error-page">
            <h2 class="headline text-danger">500</h2>
            <div class="error-content">
                <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Something went wrong.</h3>
                <p>
                    We will work on fixing that right away.
                    Meanwhile, you may <a href="https://yandscrm.com">return to Home</a> or try using the search form.
                </p>

                <form class="search-form">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" name="submit" class="btn btn-danger">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.input-group -->
                </form>
                <p><h2>Error Message :  @Model.ErrorMessage</h2></p>
                <p><h3>Please Contacle IT Support </h3></p>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>