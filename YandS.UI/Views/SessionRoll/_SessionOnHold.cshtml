        <thead>
            <tr>
                <th class="all VMiddle text-center">F.N</th>
                <th class="VMiddle">SR HOLD UNTILL<br />تارخ انتهاء الوقف</th>
                <th class="VMiddle text-center">D.C</th>
                <th class="VMiddle">COURT</th>
