@model YandS.UI.Models.CaseInvoiceFeeCalculation
@{
    var ClaimAmount = Model.ClaimAmount.Value.ToString("0.###");

    var varClaimAmountCalculated = (decimal)Model.ClaimAmount * (decimal)(Model.ClaimAmountPct / 100);

    var varFeeAmountCalculated = (decimal)varClaimAmountCalculated * (decimal)(Model.FeeAmountPct / 100);

    ViewBag.ClaimAmountCalculated = varClaimAmountCalculated.ToString("0.###");

    ViewBag.FeeAmountCalculated = varFeeAmountCalculated.ToString("0.###");

    ViewBag.ClaimAmountPct = Model.ClaimAmountPct.ToString("0.###");

    ViewBag.FeeAmountPct = Model.FeeAmountPct.ToString("0.###");
}
<tr style="mso-yfti-irow:7;mso-yfti-lastrow:yes;height:.3in">
    <td style="width:49.5pt;border:none;border-right:solid windowtext 1.5pt;
  padding:0in 5.4pt 0in 5.4pt;height:.3in" width="66">
        <p class="MsoNormal">
            <o:p>&nbsp;</o:p>
        </p>
    </td>
    <td colspan="3" style="width:517.25pt;border-top:none;border-left:none;border-bottom:solid windowtext 1.5pt;border-right:solid windowtext 1.5pt;mso-border-top-alt:solid windowtext 1.5pt;mso-border-left-alt:solid windowtext 1.5pt;padding:0in 5.4pt 0in 5.4pt;height:.3in" width="690">
        <p align="center" class="">
            <span style="font-size: 14.0pt; mso-ascii-font-family:Calibri;mso-hansi-font-family:Calibri;mso-bidi-font-family:Calibri;color:black">@ViewBag.ClaimAmountPct&nbsp;%&nbsp;of&nbsp;@ClaimAmount&nbsp;=&nbsp;@ViewBag.ClaimAmountCalculated&nbsp;and&nbsp;@ViewBag.FeeAmountPct&nbsp;%&nbsp;of&nbsp;@ViewBag.ClaimAmountCalculated&nbsp;=&nbsp;@ViewBag.FeeAmountCalculated</span>
        </p>
    </td>
    <td style="width:28.1pt;border:none;mso-border-left-alt:solid windowtext 1.5pt;padding:0in 5.4pt 0in 5.4pt;height:.3in" width="37">
        <p class="MsoNormal">
            <o:p>&nbsp;</o:p>
        </p>
    </td>
</tr>
