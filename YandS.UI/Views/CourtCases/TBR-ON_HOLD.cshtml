@model YandS.UI.Models.CaseRegistrationVM
@Html.HiddenFor(model => model.PartialViewName)

<script type="text/javascript">
    $(document).ready(function () {
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        });

        $('.datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            clearBtn: true,
            autoclose: true,
            orientation: "bottom auto"
        });

        $("#ActionDate").datepicker("setDate", new Date());

        var AllowedUsers = ["1", "2", "3", "4", "5", "6", "9"];
        $(".AddNewMaster").prop("disabled", false);
        if (AllowedUsers.indexOf($("#hidUserName").val()) == -1) {
            $(".AddNewMaster").prop("disabled", true);
            $("#ActionDate").datepicker('remove');
            $('#ActionDate').prop('readonly', true);
        }

    });
</script>
<div class="row">
    <div class="col-sm-3">
        <div class="form-group">
            <label for="ActionDate">ACTION DATE تاريخ بدء الحالة</label>
            @Html.EditorFor(model => model.ActionDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
        </div>
    </div>
    <div class="col-sm-3 AppHidden">
        <div class="form-group">
            <label for="OnHoldReasonDDL">REASON  سبب توقف التسجيل</label>
            @Html.DropDownList("OnHoldReasonDDL", null, htmlAttributes: new { @class = "form-control select2bs4" })
        </div>
    </div>
    <div class="col-sm-4 AppHidden">
        <div class="form-group">
            <label for="OnHoldDone">DONE استكمال</label>
            @Html.DropDownList("OnHoldDone", null, htmlAttributes: new { @class = "form-control select2bs4" })
        </div>
    </div>
</div>